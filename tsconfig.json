{
  "compilerOptions": {
    "outDir": "dist",
    "target": "es5",
    "module": "es2015",
    "moduleResolution": "node",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "inlineSources": true,
    "declaration": true,
    "removeComments": true,
    "noImplicitAny": false,
    "lib": ["es6", "dom"],
    "typeRoots": [
      "node_modules/@types",
      "node_modules"
    ],
    "types": [
      "systemjs",
      "jasmine",
      "node",
      "pdf"
    ]
  },
  "exclude": [
    "gulpfile.ts",
    "node_modules",
    "dist",
    "build",
    "aot"
  ]
}